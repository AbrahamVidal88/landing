---
import "@/styles/globals.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Pucolab es una empresa de desarrollo de software ubicada en Cancún, México, especializada en la creación de software a medida y soluciones de Software como Servicio (SaaS)."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      is:inline
      data-domain="pucolab.com"
      src="https://plausible.gonzalochale.dev/js/script.js"></script>
  </head>
  <body>
    <slot />
  </body>
</html>
